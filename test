        templateResult: function (data) {
            if (data.id === '') { // Add All option
                return $('<span style="font-weight:bold;">').text(data.text);
            } else {
                return data.text;
            }
        }
    }).on('select2:select', function (e) {
        var selectedOption = e.params.data;
        if (selectedOption.id === '') { // If "Add All" is selected
            var allOptions = $(this).find('option:not(:selected)');
            allOptions.prop('selected', true);
            $(this).trigger('change');
        }
