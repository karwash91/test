<!-- HTML form -->
<form id="myForm">
    <!-- Parent field -->
    <select id="parentField">
        <option value="1">Option 1</option>
        <option value="2">Option 2</option>
        <option value="3">Option 3</option>
    </select>

    <!-- Child field -->
    <select id="childField">
        <!-- Options will be dynamically populated -->
    </select>
</form>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#parentField').on('change', function () {
            var parentId = $(this).val();

            // Make an AJAX request to fetch options for the child field
            $.ajax({
                url: '/get_child_options/',  // URL to fetch child options
                data: {
                    parent_id: parentId
                },
                dataType: 'json',
                success: function (data) {
                    // Clear previous options
                    $('#childField').empty();
                    
                    // Populate child options
                    $.each(data.options, function (key, value) {
                        $('#childField').append($('<option>').text(value).attr('value', key));
                    });
                }
            });
        });
    });
</script>
